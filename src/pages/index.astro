<style scoped>
  .caret {
    transition: transform 0.2s ease;
  }
  details[open] .caret {
    transform: rotate(180deg);
  }

  @property --num {
    syntax: "<integer>";
    initial-value: 0;
    inherits: false;
  }

  #counter {
    animation: counter 5s 1 alternate ease-in-out;
    counter-reset: num var(--num);
    animation-fill-mode: forwards;
  }

  #counter::after {
    content: counter(num) "+";
  }

  @keyframes counter {
    from {
      --num: 0;
    }
    to {
      --num: 14900;
    }
  }
</style>

<script type="module">
  import {
    animate,
    scroll,
    stagger,
    inView,
  } from "https://cdn.jsdelivr.net/npm/motion@latest/+esm";

  inView(".headshot", (element) => {
    animate(
      element,
      { opacity: [0, 1], y: [20, 0] },
      { duration: 0.5, easing: "ease-out" }
    );
  });

  inView(".service-cards", (element) => {
    animate(
      ".service-cards .service",
      { opacity: [0, 1], y: [20, 0] },
      { delay: stagger(0.25), duration: 0.5, easing: "ease-out" }
    );
  });

  inView(".section-header", (element) => {
    animate(
      element,
      { opacity: [0, 1], y: [20, 0] },
      { duration: 0.5, easing: "ease-out", delay: 0.15 }
    );
  });

  animate(
    "#heading h1 span:not(.period)",
    { opacity: [0, 1], y: [-20, 0] },
    { delay: stagger(0.02) }
  );

  animate(
    "aside > div",
    { opacity: [0, 1], y: [-20, 0] },
    { delay: stagger(0.05) }
  );

  inView("#faq", (element) => {
    animate(
      "#faq details",
      { opacity: [0, 1], x: [-20, 0] },
      {
        delay: stagger(0.1),
      }
    );
  });
</script>
