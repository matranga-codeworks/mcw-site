---
type Props = {
  heading: string;
  subheading: string;
};
const { heading, subheading } = Astro.props;
---

<article
  class="service bg-white rounded-lg overflow-hidden shadow-md flex flex-col relative hover:translate-y-[-8px] hover:shadow-lg transition-all"
>
  <h3 class="text-2xl font-semibold bg-primary-400 text-white px-8 py-4">
    {heading}
  </h3>
  <p class="px-8 py-6">
    {subheading}
  </p>
</article>
