---
type Props = {
  heading: string;
  subheading: string;
};
const { heading, subheading } = Astro.props;
---

<article
  class="service p-8 bg-white rounded shadow-md flex flex-col gap-4 relative hover:translate-y-[-8px] hover:shadow-lg transition-all"
>
  <h3 class="text-2xl font-semibold text-primary-400 z-10">
    {heading}
  </h3>
  <p class="z-10">
    {subheading}
  </p>
</article>
